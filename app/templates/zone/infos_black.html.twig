<div class="zone infos_black {{ zone.subType }}">
    {% for photo in zone.photos | slice(0,1) %}
        <div class="photo apparition" data-id="{{ photo.id }}" data-name="{{ fileName(photo,locale)}}">
            <img alt="{{ photo.detail(locale).title }}"/>
        </div>
    {% endfor %}
    <h3>{{ zone.detail(locale).title }}</h3>
    <div class="sociaux">
        <a href="{{ infos.facebook }}" target="_blank"><img class="lazy point" data-src="{{ asset('img/facebook-white.svg') }}" alt="Facebook"/></a>
    </div>
    <div class="tel">
        <strong>{{ infos.tel }}</strong>
    </div>
    <div class="adresse">
        <span>{{ infos.adress }}</span>
        <span>{{ infos.cp }} {{ infos.city }}</span><br>
        <span>{{ infos.resa }}</span>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2983.670634797619!2d9.271635115432339!3d41.59800757924538!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12d981639248a375%3A0x7f0861e0fe572cd!2sle%20k&#39;f%C3%A9%20du%20lycee!5e0!3m2!1sfr!2sfr!4v1600351200862!5m2!1sfr!2sfr" width="414" height="380" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
</div>